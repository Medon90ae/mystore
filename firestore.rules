
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow admins to read/write anything
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Products can be read by anyone, but only created/updated/deleted
    // by the user who owns it or an admin.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin() || request.auth.uid == resource.data.owner_id;
    }

    // Example for a user-specific collection
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
  }
}
